<div class="m-4">
  <div class="container">
    <div class="col-12 d-flex justify-content-center">
      <div class='col-12 my-5'>
      <br>
        <h2>Connecte-toi !</h2>
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email,
                        autofocus: true,
                        label: "Ton mail:",
                        input_html: { autocomplete: "e-mail" } %>
            <%= f.input :password,
                        label: "Ton mot de passe:",
                        input_html: { autocomplete: "mot de passe" } %>
            <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
          </div>
          <div class="form-actions">
            <%= f.button :submit, "Je me connecte!", class:"btn btn btn-primary"%>
          </div>
          <% end %>
          <br>
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
