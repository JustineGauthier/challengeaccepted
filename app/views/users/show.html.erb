<div class="container">
  <div class="w-100 text-center">
    <h1>CHALLENGE ACCEPTED</h1>
      <div>
        <%= cl_image_tag(@user.photo.key, width: 400, height: 300, crop: :fill) %>
      </div>

      <div>
        <p><strong><%= @user.total_points %></strong> üèÜ</p>
        <p>Wow, tu te surpasses!</p>
      </div>

      <div>
        <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
      </div>
  </div>
  <div class='validation_progression'>
    <h2>Tes d√©fis √† valider :</h2>
    <p>Qu'as-tu accomplis aujourd'hui?</p>
    <div>
      <% @challenges.each do |challenge| %>
        <% if challenge.end_date > Date.yesterday %>
          <% challenge.participations.each do |participation| %>
            <% participation.progressions.each do |progression| %>
              <% if progression.done == false && progression.date < Date.tomorrow %>
                <% if participation.user_id == current_user.id %>
                  <ul>
                    <div data-controller="validate-progression"
                        data-validate-progression-update-url-value="<%= done_progression_path(progression) %>">
                      <li>
                        <strong><%= challenge.title %></strong>
                        <p>Se termine le <em><%= challenge.end_date %></em></p>
                      </li>
                      <button class="btn btn-valid btn-primary" data-modal-target="#modal" data-action="click->validate-progression#validate">
                        ‚úîÔ∏è
                      </button>
                      <button class="btn btn-not-valid btn-primary" data-action="click->validate-progression#nop">
                        ‚ùå
                      </button>
                    </div>
                  </ul>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="d-flex justify-content-center">
    <%= link_to "Lancer un challenge!", new_challenge_path, class: "btn btn-primary" %>
  </div>

  <div>
    <h2>Tes challenges en cours:</h2>
    <% @challenges.each do |challenge| %>
      <ul>
        <% @participations.each do |participation| %>
          <% participation.progressions.each do |progression| %>
            <% if progression.done %>
              <% @progression_count %>
              <%# Pour chaques click sur "done", +1 doit √™tre ajout√© √† @progression_count du challenge en question. %>
            <% end %>
          <% end %>
        <% end %>
        <% if challenge.end_date > Date.yesterday %>
          <% time_left = (challenge.end_date - Date.today).to_i %>
          <li>
            <%= link_to challenge_path(challenge) do %>
              <%# <%= cl_image_tag challenge.photo.key, height: 200, width: 200, crop: :fill %>
              <strong><%= challenge.title %></strong>
              <div>R√©alis√© : <%= @progression_count %> fois</div>
              <div>Se termine dans : <%= time_left %> jours</div>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <div>
  <h2>Tes anciens challenges :</h2>
    <% @challenges.each do |challenge| %>
      <ul>
        <% @participations.each do |participation| %>
          <% participation.progressions.each do |progression| %>
            <% if progression.done %>
              <% @progression_count %>
            <% end %>
          <% end %>
        <% end %>
        <% if challenge.end_date < Date.today %>
          <li>
            <%= link_to challenge_path(challenge) do %>
              <%# <%= cl_image_tag challenge.photo.key, height: 200, width: 200, crop: :fill %>
              <%= challenge.title %>
              <p>Tu avais valid√© <%= @progression_count%>/<%= challenge.total_time %>jours</p>
            <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>
