<div class="m-2">
  <div class="container">
    <div >
      <div class="col-12 d-flex justify-content-center">
        <div class='col-12'>
          <div class="fond-new-challenge">
            <h1 id="title-challenge-form" class="text-center">Créé ton challenge!</h1><br>
          </div>
            <%= simple_form_for(@challenge) do |f| %>
                <%= f.input :title,
                            label: "Trouve un super titre!",
                            autofocus: true %>
                <%= f.input :description,
                label: "Décris le challenge à tes potes:" %>
                <%= f.input :start_date, as: :date, html5: true,
                label: "Vous commencez quand?" %>
                <%= f.input :end_date, as: :date, html5: true,
                label: "Et la date de fin?" %>
                <p><%= "A quelle fréquence veux-tu effectuer ce challenge ?" %></p>
                <%= f.select :frequency,
                [ 'Quotidiennement','Une fois par semaine','Une seule fois à la fin' ],
                prompt: 'Fais ton choix' %>
                <br>
                <br>
                <%= f.submit "Enregistrer ce challenge", class:"btn", style:"width: 100%" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
