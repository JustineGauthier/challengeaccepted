<div class="m-2">
  <div class="container">
    <div class="col-12 d-flex justify-content-center">
      <div class='col-12 my-5'>
        <h1 class="text-center">Crée ton challenge!</h1><br>
          <%= simple_form_for(@challenge) do |f| %>
              <%= f.input :title,
                          label: "Choisis un titre",
                          autofocus: true %>
              <%= f.input :description,
              label: "Décris au mieux ton challenge:" %>
              <%= f.input :start_date, as: :date, html5: true,
              label: "Quand commence ton challenge ?" %>
              <%= f.input :end_date, as: :date, html5: true,
              label: "Il se termine quand ?" %>
              <p><%= "A quelle fréquence veux-tu effectuer ce challenge ?" %></p>
              <%= f.select :frequency,
              [ 'Quotidien','Hebdomadaire','Unique' ],
              prompt: 'Fais ton choix' %>
              <p> </p>
              <%= f.submit "Enregistrer ce challenge", class:"btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
