
if
    <h1>Le challenge <%= @challenge.title %> est prêt à être lancé !</h1>
    <h6>Ton challenge se déroulera sur <%= @challenge.total_time %> jours.</h6>
    <h6>T'es prêt à tout donner? Il te reste <%= @time_left %> jours pour te challenger !</h6>
    <p>Rappel des règles: <%= @challenge.description %></p>
                <%= cl_image_tag(@challenge.photo.key, width: 400, height: 300, crop: :fill) %>
    <p>Si t'es prêt, invite tes potes !</p>
    <div data-controller="share" data-share-id-value= <%= @challenge.id%>  data-share-title-value= <%= @challenge.title%>>
      <p class= "btn btn-primary" data-action="click->share#shareLink"> Partage ton lien </p>
    </div>

    <p><%= @users.map { |user| user.name} %></p>




 else

  <div class='challenge-description'>
    <h1><%= @challenge.title %></h1>
    <h6>Temps total : <%= @challenge.total_time %> jours.</h6>
    <h6>Il te reste <%= @time_left %> jours de challenge, courage !</h6>
    <p><%= @challenge.description %></p>
    <ul>
      <% @users.each do |user| %>
        <%# <li><img src='<%= cl_image_path user.photo.key, height: 200, width: 200, crop: :fill ' alt="photo de profil"></li> %>
        <li><%= user.name %></li>
        <% @participations.each do |participation| %>
          <% if participation.user_id == user.id %>
            <% @progression_count = 0 %>
            <% participation.progressions.each do |progression| %>
              <% if progression.done %>
                <% @progression_count += 1 %>
              <% end %>
            <% end %>
            <p>Wouhou, tu as effectuée <%= @progression_count %> jours de challenge sur les <%= @challenge.total_time %> totals !</p>
          <% end %>
        <% end %>
      <% end %>
    </ul>
  </div>


end
